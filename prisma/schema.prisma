generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// schema.prisma
model User {
  // Telegram ID'si, sayısal hassasiyet kaybını önlemek için String olarak saklanır
  id            String    @id @unique 
  firstName     String
  lastName      String?
  username      String?   @unique
  languageCode  String?
  lastActivity  DateTime
  products      Product[]
}

model Product {
  id          String    @id @default(uuid())
  title       String
  description String
  images      String[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // İlişki
  userId      String    // String olarak değiştirildi
  user        User      @relation(fields: [userId], references: [id])
}
